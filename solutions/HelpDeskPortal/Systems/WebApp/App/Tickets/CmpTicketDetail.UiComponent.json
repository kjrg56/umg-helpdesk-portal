{
  "eventsAndFunctions": [
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "ticket",
            "variableName": "ticket"
          },
          {
            "command": "Set",
            "expression": "GetCurrentUser()",
            "variableName": "user"
          },
          {
            "command": "SetTitle",
            "expression": "\"Ticket #\" + ConvertToString(ticket.id)",
            "widgetName": "mainContainer"
          },
          {
            "children": [
              {
                "attributeName": "format",
                "command": "SetAttribute",
                "expression": "\"\"",
                "widgetName": "fieldAssignationDate"
              },
              {
                "command": "SetValue",
                "expression": "\"-\"",
                "widgetName": "fieldAssignationDate"
              }
            ],
            "command": "If",
            "expression": "ticket.assignationDate == null"
          },
          {
            "children": [
              {
                "attributeName": "format",
                "command": "SetAttribute",
                "expression": "\"DateTime\"",
                "widgetName": "fieldAssignationDate"
              },
              {
                "command": "SetValue",
                "expression": "ticket.assignationDate",
                "widgetName": "fieldAssignationDate"
              }
            ],
            "command": "Else"
          },
          {
            "children": [
              {
                "attributeName": "format",
                "command": "SetAttribute",
                "expression": "\"\"",
                "widgetName": "fieldCloseDate"
              },
              {
                "command": "SetValue",
                "expression": "\"-\"",
                "widgetName": "fieldCloseDate"
              }
            ],
            "command": "If",
            "expression": "ticket.closedDate == null"
          },
          {
            "children": [
              {
                "attributeName": "format",
                "command": "SetAttribute",
                "expression": "\"DateTime\"",
                "widgetName": "fieldCloseDate"
              },
              {
                "command": "SetValue",
                "expression": "ticket.closedDate",
                "widgetName": "fieldCloseDate"
              }
            ],
            "command": "Else"
          },
          {
            "children": [
              {
                "command": "SetValue",
                "expression": "ConvertToString(ticket.hours) + \" horas\"",
                "widgetName": "fieldHours"
              }
            ],
            "command": "If",
            "expression": "ticket.hours != null"
          },
          {
            "children": [
              {
                "command": "HideAction",
                "expressionActionKey": "\"createComment\"",
                "widgetName": "containerComments"
              },
              {
                "children": [
                  {
                    "command": "ShowAction",
                    "expressionActionKey": "\"reopen\"",
                    "widgetName": "containerComments"
                  }
                ],
                "command": "If",
                "expression": "user.id == ticket.userCreated.id"
              },
              {
                "children": [
                  {
                    "command": "HideAction",
                    "expressionActionKey": "\"reopen\"",
                    "widgetName": "containerComments"
                  }
                ],
                "command": "Else"
              }
            ],
            "command": "If",
            "expression": "ticket.status == \"Closed\""
          },
          {
            "children": [
              {
                "command": "HideAction",
                "expressionActionKey": "\"reopen\"",
                "widgetName": "containerComments"
              },
              {
                "command": "ShowAction",
                "expressionActionKey": "\"createComment\"",
                "widgetName": "containerComments"
              }
            ],
            "command": "Else"
          },
          {
            "command": "Refresh",
            "widgetName": "repeaterComments"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "ticket",
            "type": "HelpDeskService.Ticket"
          },
          {
            "name": "user",
            "type": "HelpDeskService.User"
          }
        ]
      },
      "name": "main_init"
    },
    {
      "algorithm": {
        "parameters": [
          {
            "name": "args",
            "type": "ArgsLoadRecords"
          }
        ],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "ticket",
            "variableName": "ticket"
          },
          {
            "command": "Set",
            "expression": "HelpDeskService.ListTicketCommentsById(ticket.id, {})",
            "variableName": "comments"
          },
          {
            "command": "Return",
            "expression": "comments"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "ticket",
            "type": "HelpDeskService.Ticket"
          },
          {
            "name": "comments",
            "type": "list(HelpDeskService.TicketComment)"
          }
        ]
      },
      "name": "repeaterComments_loadRecords"
    },
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "ticket",
            "variableName": "ticket"
          },
          {
            "buttons": "ok-cancel",
            "command": "Open",
            "expressionIcon": "\"add.svg\"",
            "expressionStartModel": "{ticket: ticket}",
            "expressionTitle": "\"Nuevo Comentario\"",
            "mode": "window",
            "size": "default",
            "uiComponentName": "CmpCreateComment"
          },
          {
            "children": [
              {
                "command": "Execute",
                "expression": "refreshTicketData(ticket.id)"
              },
              {
                "command": "Refresh",
                "widgetName": "repeaterComments"
              },
              {
                "command": "CloseCurrent"
              }
            ],
            "command": "OnOk",
            "variableNameOpenedModel": "openModel"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "ticket",
            "type": "HelpDeskService.Ticket"
          },
          {
            "name": "openModel",
            "type": "any"
          }
        ]
      },
      "name": "containerComments_handlerAction_createComment"
    },
    {
      "algorithm": {
        "parameters": [],
        "statements": [
          {
            "command": "ReadModel",
            "modelVariableName": "ticket",
            "variableName": "ticket"
          },
          {
            "command": "ConfirmMessage",
            "expressionMessage": "\"Est√° seguro que desea reabrir el ticket?\"",
            "expressionTitle": "\"Reabrir Ticket\""
          },
          {
            "children": [
              {
                "command": "Set",
                "expression": "{status: \"Assigned\", userAssignedId: ticket.userAssigned.id}",
                "variableName": "update"
              },
              {
                "command": "Execute",
                "expression": "HelpDeskService.UpdateTicket(ticket.id, update)"
              },
              {
                "command": "Execute",
                "expression": "refreshTicketData(ticket.id)"
              },
              {
                "command": "Refresh",
                "widgetName": "repeaterComments"
              }
            ],
            "command": "OnYes"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "ticket",
            "type": "HelpDeskService.Ticket"
          },
          {
            "name": "update",
            "type": "HelpDeskService.TicketUpdate"
          }
        ]
      },
      "name": "containerComments_handlerAction_reopen"
    },
    {
      "algorithm": {
        "parameters": [
          {
            "name": "ticketId",
            "type": "string"
          }
        ],
        "statements": [
          {
            "command": "Set",
            "expression": "HelpDeskService.GetTicketById(ticketId)",
            "variableName": "ticket"
          },
          {
            "command": "WriteModel",
            "expression": "ticket",
            "modelVariableName": "ticket"
          },
          {
            "command": "Execute",
            "expression": "main_init()"
          }
        ],
        "typeReturn": "any",
        "variables": [
          {
            "name": "ticket",
            "type": "HelpDeskService.Ticket"
          }
        ]
      },
      "name": "refreshTicketData"
    }
  ],
